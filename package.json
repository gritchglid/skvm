  "scripts": {
    "format": "prettier --no-semi --write 'src/**/*.js' 'test/**/*.js'",
    "lint": "prettier --no-semi -l 'src/**/*.js' 'test/**/*.js'",
    "test": "jest"
  },
  "engines": {
    "node": ">=8.11.2",
    "yarn": "1.16.0"
  },
  "author": "GritchGlid",
  "license": "MIT",
  "dependencies": {
    "decompress": "^4.2.0",
    "feedparser": "^2.2.9",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "progress-stream": "^2.0.0",
    "trash": "^6.0.0"
  },
  "devDependencies": {
    "jest": "^24.8.0",
    "mock-fs": "^4.10.1",
    "prettier": "^1.18.2"
