    "mkdirp": "^0.5.1",
    "progress-stream": "^2.0.0",
    "trash": "^4.3.0"
  },
  "devDependencies": {
    "jest": "^23.1.0",
    "mock-fs": "^4.5.0",
    "prettier": "^1.12.1"
